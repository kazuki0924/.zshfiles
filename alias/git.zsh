# git
alias g="lazygit"
alias gp="git push"
alias gP="git pull"
alias gS="git status"
alias gd="git diff"
alias gfo="git fetch origin"
alias gaa="git add --all"
alias gcm="git commit -m "
alias gca="git commit --amend"
alias gcapfwl="git commit --amend && git push --force-with-lease"
alias gpfwl="git push --force-with-lease"
alias gf="git add --all && git commit -m \"fix\" && git rebase -i HEAD~2 && git push --force-with-lease"
alias gpsu="git push --set-upstream origin \$(git branch --show-current)"
alias gbd="git branch -D"
alias gpod="git push origin --delete"
alias gc="git checkout"
alias gcm="git checkout master && git pull"
alias gcb="git checkout -b"
alias grs="git reset --soft HEAD^"
alias grh="git reset --hard origin/"
alias gri="git rebase -i HEAD~5"
alias gcp="git cherry-pick"
alias gs="git stash"
alias gsa="git stash apply 0"
alias glo="git log --oneline"

