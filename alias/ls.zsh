# exa
alias l='exa -lbF --icons --git'                                              # list, size, type, git
alias ll='exa -lbGF --icons --git'                                            # long list
alias llm='exa -lbGd --icons --git --sort=modified'                           # long list, modified date sort
alias lll='exa -lbhHigUmuSa@ --time-style=long-iso --git --color-scale --icons' # all + extended list
alias l1='exa -1'                                                     # one column, just names
alias lt='exa --tree --icons'                                       # tree
